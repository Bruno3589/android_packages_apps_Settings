<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginStart="12dp"
     android:layout_marginEnd="12dp"
     android:layout_marginTop="12dp"
     android:layout_marginBottom="4dp"
     android:orientation="vertical">
     
     <!-- These widgets are added initially.
          Depending on which control type is used,
          the ones that aren't needed are removed. -->
     
     <LinearLayout
          android:id="@+id/button_backlight_dialog_onoff"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:gravity="left"
          android:orientation="horizontal">
          <Switch
               android:id="@+id/button_backlight_dialog_onoff_switch"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
          
          <TextView
               android:id="@+id/button_backlight_dialog_onoff_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="2dp"
               android:text="@string/buttons_backlight_enable_backlight"
               android:layout_marginTop="1dp" />
     </LinearLayout>
     
     <TextView
          android:id="@+id/button_backlight_dialog_brightness_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:textSize="12sp" />
     <LinearLayout
          android:id="@+id/button_backlight_dialog_brightness"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal">
          <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="4dp"
               android:text="@string/general_brightness" />
          
          <SeekBar
               android:id="@+id/button_backlight_dialog_brightness_bar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="1dp" />
     </LinearLayout>
     
     <TextView
          android:id="@+id/button_backlight_dialog_timeout_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:textSize="12sp" />
     <LinearLayout
          android:id="@+id/button_backlight_dialog_timeout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal">
          <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="4dp"
               android:text="@string/general_timeout" />
          
          <SeekBar
               android:id="@+id/button_backlight_dialog_timeout_bar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="1dp" />
     </LinearLayout>
     
</LinearLayout>